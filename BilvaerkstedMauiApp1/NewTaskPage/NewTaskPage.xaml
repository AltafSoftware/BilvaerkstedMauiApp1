<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilvaerkstedMauiApp1.NewTaskPage"
             Title="New Task">
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Customer name and address" FontSize="20" FontFamily=""/>
            <Entry x:Name="customerNameEntry" Placeholder="Enter customer name"/>
            <Entry x:Name="customerAddressEntry" Placeholder="Enter customer address"/>

            <Label Text="Car brand and model" FontSize="20" FontFamily=""/>
            <Entry x:Name="carBrandEntry" Placeholder="Enter car brand"/>
            <Entry x:Name="carModelEntry" Placeholder="Enter car model"/>

            <Label Text="Registration-number" FontSize="20" FontFamily=""/>
            <Entry x:Name="registrationNumberEntry" Placeholder="Enter registration number"/>

            <Label Text="Date and Time for Drop-off" FontSize="20" FontFamily=""/>
            <DatePicker x:Name="dropOffDatePicker"/>
            <TimePicker x:Name="dropOffTimePicker"/>

            <Label Text="Description of work to be done" FontSize="20" FontFamily=""/>
            <Editor x:Name="workDescriptionEditor" Placeholder="Enter description of the work to be done" HeightRequest="100"/>

            <Button Text="Submit" Clicked="OnSubmitClicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>