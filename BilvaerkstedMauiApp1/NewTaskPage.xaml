<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilvaerkstedMauiApp1.NewTaskPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Customer Name and Address" FontSize="20" FontFamily=""/>
            <Entry Placeholder="Enter customer name and address"/>

            <Label Text="Car Make and Model" FontSize="20" FontFamily=""/>
            <Entry Placeholder="Enter car make and model"/>

            <Label Text="Registration Number" FontSize="20" FontFamily=""/>
            <Entry Placeholder="Enter registration number"/>

            <Label Text="Date and Time for Drop-off" FontSize="20" FontFamily=""/>
            <DatePicker x:Name="dropOffDatePicker"/>
            <TimePicker x:Name="dropOffTimePicker"/>

            <Label Text="Description of Work" FontSize="20" FontFamily=""/>
            <Editor Placeholder="Enter description of the work to be done" HeightRequest="100"/>

            <Button Text="Submit" Clicked="OnSubmitClicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
